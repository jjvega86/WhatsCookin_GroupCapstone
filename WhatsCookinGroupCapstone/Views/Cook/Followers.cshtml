                    @Html.DisplayFor(modelItem => item.UserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Bio)
                </td>
                <td>
                    @Html.ActionLink(
                       linkText: "View Cookbook",
                       actionName: "FollowedCookbook",
                       controllerName: "Cook",
                       routeValues: new
                           {
                           id = item.CookId
                       },
                           htmlAttributes: null

                       )


                </td>
            </tr>
        }
    </tbody>
